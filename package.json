{
  "name": "subtest",
  "description": "Not opinionated test runner",
  "version": "1.0.0",
  "keywords": [
    "uvu",
    "test"
  ],
  "files": [
    "src",
    "dist/src"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gozala/subtest.git"
  },
  "homepage": "https://github.com/gozala/subtest.git",
  "scripts": {
    "build": "tsc --build",
    "prepublishOnly": "tsc --build",
    "test:web": "playwright-test test --runner subtest",
    "test:node": "node ./src/bin.js test",
    "test": "node ./src/bin.js test",
    "coverage": "c8 --reporter=html mocha test/**/*.spec.js && npm_config_yes=true npx st -d coverage -p 8080",
    "check": "tsc --build"
  },
  "dependencies": {
    "sade": "1.8.1",
    "uvu": "^0.5.6"
  },
  "devDependencies": {
    "@types/node": "20.3.1",
    "prettier": "2.8.8",
    "typescript": "^5.1.3"
  },
  "type": "module",
  "main": "src/lib.js",
  "module": "src/lib.js",
  "types": "./dist/src/lib.d.ts",
  "bin": {
    "subtest": "./src/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/lib.d.ts",
      "import": "./src/lib.js"
    },
    "./assert": {
      "types": "./dist/src/assert.d.ts",
      "import": "./src/assert.js"
    }
  },
  "license": "(Apache-2.0 AND MIT)"
}
